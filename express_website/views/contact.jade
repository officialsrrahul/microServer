extends layout

block content
    .container
        form(method='post',action='contact/send')
            h1 Contact
            .form-group
                label Name
                input.form-control(type="text",name='name',pladceholder='enter name')
            .form-group
                label Email
                input.form-control(type="email",name='email',pladceholder='enter email')
            .form-group
                label Message
                textarea.form-control(name='message',pladceholder='enter message')
            button.btn.btn-default(type='submit') Submit